{
	"compilerOptions": {
		"baseUrl": "./app",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"paths": {
			"lm/*": [
				"./module/*",
				"./module/*/index.ts"
			]
		},
		"lib": [
			"es5",
			"es2015",
			"es2017",
			"dom",
			"scripthost"
		]
	},
	"include": [
		"./app/**/*.ts",
		"./app/custom-typings.d.ts"
	],
	"awesomeTypescriptLoaderOptions": {
		"resolveGlobs": true,
		"forkChecker": true
	},
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}